{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2015",
        "lib": ["es2018", "dom"],
        "paths": {
            "wave-core": ["dist/wave-core/wave-core", "dist/wave-core"]
        },
        // TODO: remove once vega-lite fixes (https://github.com/visjs/vis-network/issues/67)
        "allowSyntheticDefaultImports": true,
        // TODO: remove once vega-lite fixes (https://github.com/vega/vega-lite/issues/3897)
        "resolveJsonModule": true
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    }
}
